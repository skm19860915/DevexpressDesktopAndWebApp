@model BlitzerCore.Models.UI.UIFOP;


@{

    Layout = "~/Views/Shared/_ClientLayout.cshtml";
    string color = "";
}

<div class="row">
    <div class="ClientProfile offset-lg-2 col-lg-8 col-12">
        <div class="row">
            <div class="col-sm-6" style="@color">
                <h3>New Credit Card</h3>
            </div>
        </div>
        <form asp-action="CreateFOP">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserID" />
            <div>
                <div class="row">
                    <div class=" col-8 offset-2 col-lg-4 offset-lg-4 form-group">
                        <label asp-for="Number" class="control-label" style="text-align:center"></label>
                        <input asp-for="Number" class="form-control" />
                        <span asp-validation-for="Number" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-8 offset-lg-2">
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="Expiration" class="control-label"></label>
                            <input asp-for="Expiration" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="CVN" class="control-label"></label>
                        <input asp-for="CVN" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="btn-clearence">
                <input type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>
