@model BlitzerCore.Models.Trip

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}
<div>
    <h1 class="title-header">Edit Trip</h1>
    <div class="content-container">
        <div class="breadcrumbs">
            <a class="breadcrumbs-link" href="/Portal">Portal</a>/
            <a class="breadcrumbs-link current" href="/Trip">Trip</a>
        </div>
    </div>
</div>
<hr class="title-hr mt-0" />
<div class="content-container">
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <input type="hidden" asp-for="AgentId" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndDate" class="control-label"></label>
                    <input asp-for="EndDate" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OutboundAirPortID" class="control-label"></label>
                    <select asp-for="OutboundAirPortID" class="form-control" asp-items="ViewBag.OutboundAirPortID"></select>
                    <span asp-validation-for="OutboundAirPortID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InboundAirPortID" class="control-label"></label>
                    <select asp-for="InboundAirPortID" class="form-control" asp-items="ViewBag.InboundAirPortID"></select>
                    <span asp-validation-for="InboundAirPortID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Status" class="control-label"></label>
                    <div><select class="form-control" asp-for="TripStatus" asp-items="@Html.GetEnumSelectList<Trip.Statuses>()"></select></div>
                </div>
                <div class="btn-clearence">
                    <input type="submit" value="Save" class="btn-command" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center">
        <a asp-action="Index">Back to List</a>
    </div>
</div>

